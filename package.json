{
  "name": "cypress-qa-api-automation",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "open": "cypress open",
    "test": "cypress run --reporter mochawesome --reporter-options reportDir=reports,overwrite=false,html=false,json=true && npm run report:merge && npm run report:generate",
    "report:merge": "npx mochawesome-merge reports/*.json > reports/report.json",
    "report:generate": "npx marge reports/report.json -f report -o reports"
  },
  "devDependencies": {
    "cypress": "^13.13.0",
    "crypto-js": "^4.2.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^5.2.0"
  }
}
